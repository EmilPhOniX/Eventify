{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artist.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if artist.image %}
                        <img src="{{ asset('uploads/images/' ~ artist.image) }}" alt="{{ artist.name }}" width="100">
                    {% else %}
                        <p>Aucune image disponible</p>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_artist_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}

        <a href="{{ path('app_artist_edit', {'id': artist.id}) }}">edit</a>

        {{ include('artist/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
