{% extends 'base.html.twig' %}

{% block title %}Eventify{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .event-list { margin-top: 20px; }
        .event-item { margin-bottom: 10px; padding: 10px; border: 1px solid #ddd; }
    </style>

    <div class="example-wrapper">
        <h1>Bienvenue sur Eventify !</h1>
        <h2>Les événements à venir :</h2>
        {% if events is defined and events|length > 0 %}
            <div class="event-list">
                {% for event in events %}
                    {% if event.date > "now"|date('Y-m-d') %}
                        <div class="event-item">
                            <h3>{{ event.name }}</h3>
                            <p>Date : {{ event.date|date('d/m/Y') }}</p>
                            <p>{{ event.description }}</p>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% else %}
            <p>Aucun événement à venir.</p>
        {% endif %}
        <a href="{{ path('app_event_index') }}"></a>
    </div>
{% endblock %}
